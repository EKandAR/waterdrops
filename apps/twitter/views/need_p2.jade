extends ../../../views/layout

block head
  script(type='text/javascript', src="/socket.io/socket.io.js")
  script(type='text/javascript')
    var socket = io.connect('http://tillthelast.drop');

block content
  #main-nav
    h1#main-title= title
    a#p2-login.login.button(href="/auth/twitter") PLAYER 2 LOGIN
  #welcome-player 
    #welcome-text
      h2 Welcome
      h2= playerOneName + "!!!"

  #need-prompt.game-prompt
    h1= "Waiting for player 2!!!"

  script(type='text/javascript')    
    waitBlink = function () {
      $('#need-prompt').delay(100).fadeTo(100,0).delay(100).fadeTo(100,1, waitBlink);
    }
    $(document).ready(function(){
        $('#need-prompt').fadeIn(200);
        waitBlink();
      });
